<!DOCTYPE html>
<html>
<head>
    <title>Authorization - OAuth2 Server</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        :root {
            --primary: #10b981;
            --primary-hover: #059669;
            --danger: #ef4444;
            --danger-hover: #dc2626;
            --green-50: #ecfdf5;
            --green-100: #d1fae5;
            --green-500: #10b981;
            --green-600: #059669;
            --green-700: #047857;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --radius-sm: 0.125rem;
            --radius: 0.375rem;
            --radius-md: 0.5rem;
            --radius-lg: 0.75rem;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background-color: var(--gray-100);
            color: var(--gray-800);
            line-height: 1.5;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .container {
            width: 100%;
            max-width: 480px;
            background-color: white;
            border-radius: var(--radius-md);
            box-shadow: var(--shadow-lg);
            overflow: hidden;
        }

        .header {
            padding: 1.5rem 2rem;
            background-color: white;
            border-bottom: 1px solid var(--gray-200);
        }

        .content {
            padding: 1.5rem 2rem;
        }

        h1 {
            color: var(--gray-900);
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .subtitle {
            color: var(--gray-600);
            font-size: 0.875rem;
            margin-bottom: 1.5rem;
        }

        .client-info {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1.25rem;
            background-color: var(--green-50);
            border-radius: var(--radius);
            border: 1px solid var(--green-100);
            margin-bottom: 1.5rem;
        }

        .client-icon {
            width: 48px;
            height: 48px;
            background-color: var(--green-600);
            color: white;
            border-radius: var(--radius);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.25rem;
        }

        .client-details {
            flex: 1;
        }

        .client-name {
            font-weight: 600;
            color: var(--gray-900);
        }

        .client-description {
            font-size: 0.875rem;
            color: var(--gray-600);
            margin-top: 0.25rem;
        }

        .scope-list {
            margin-bottom: 1.5rem;
        }

        .scope-heading {
            font-weight: 500;
            color: var(--gray-700);
            margin-bottom: 0.75rem;
        }

        .scope-item {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid var(--gray-200);
        }

        .scope-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .scope-icon {
            flex-shrink: 0;
            width: 20px;
            height: 20px;
            background-color: var(--green-500);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.75rem;
        }

        .scope-content {
            flex: 1;
        }

        .scope-title {
            font-weight: 500;
            color: var(--gray-800);
        }

        .scope-description {
            font-size: 0.875rem;
            color: var(--gray-600);
            margin-top: 0.25rem;
        }

        .buttons {
            display: flex;
            gap: 0.75rem;
            justify-content: flex-end;
            margin-top: 2rem;
        }

        .btn {
            padding: 0.625rem 1.25rem;
            font-size: 0.875rem;
            font-weight: 500;
            border-radius: var(--radius);
            border: none;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .btn-allow {
            background-color: var(--primary);
            color: white;
        }

        .btn-allow:hover {
            background-color: var(--primary-hover);
        }

        .btn-deny {
            background-color: white;
            color: var(--gray-700);
            border: 1px solid var(--gray-300);
        }

        .btn-deny:hover {
            background-color: var(--gray-50);
            color: var(--gray-900);
        }

        .footer {
            padding: 1rem 2rem;
            background-color: var(--green-50);
            border-top: 1px solid var(--green-100);
            font-size: 0.75rem;
            color: var(--gray-600);
            text-align: center;
        }

        .debug-info {
            margin-top: 1rem;
            font-size: 0.75rem;
            color: var(--gray-600);
        }

        details {
            margin-top: 0.5rem;
        }

        summary {
            cursor: pointer;
            padding: 0.5rem;
            background-color: var(--gray-100);
            border-radius: var(--radius-sm);
        }

        details > div {
            margin-top: 0.5rem;
            padding: 0.75rem;
            background-color: var(--gray-50);
            border-radius: var(--radius-sm);
            border: 1px solid var(--gray-200);
        }

        details p {
            margin-bottom: 0.375rem;
        }

        details p:last-child {
            margin-bottom: 0;
        }

        @media (max-width: 640px) {
            .header,
            .content,
            .footer {
                padding: 1.25rem;
            }

            .buttons {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                text-align: center;
            }
        }
    </style>
</head>
<body>
<div class="container">
    <div class="header">
        <h1>Authorize Application</h1>
        <div class="subtitle">Review the permissions requested by this application</div>
    </div>

    <div class="content">
        <div class="client-info">
            <div class="client-icon">
                <%= client.name.charAt(0).toUpperCase() %>
            </div>
            <div class="client-details">
                <div class="client-name"><%= client.name %></div>
                <div class="client-description">Wants to access your Easypanel account</div>
            </div>
        </div>

        <% if (scopes && scopes.length > 0) { %>
            <div class="scope-list">
                <div class="scope-heading">This application will be able to:</div>
                <% scopes.forEach(function(scope) { %>
                    <div class="scope-item">
                        <div class="scope-icon">âœ“</div>
                        <div class="scope-content">
                            <% if (scope === 'profile') { %>
                                <div class="scope-title">Access your profile</div>
                                <div class="scope-description">View your basic profile information</div>
                            <% } else if (scope === 'email') { %>
                                <div class="scope-title">Access your email address</div>
                                <div class="scope-description">View your email address information</div>
                            <% } else if (scope === 'openid') { %>
                                <div class="scope-title">Verify your identity</div>
                                <div class="scope-description">Confirm who you are</div>
                            <% } else { %>
                                <div class="scope-title"><%= scope %></div>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>

        <form method="POST" action="/oauth/consent">
            <!-- CSRF Protection -->
            <input type="hidden" name="csrf_token" value="<%= csrfToken %>">

            <!-- Client and Redirect Info -->
            <input type="hidden" name="client_id" value="<%= client.id %>">
            <input type="hidden" name="redirect_uri" value="<%= authRequest.redirect_uri || client.redirectUris[0] %>">

            <!-- Scopes -->
            <input type="hidden" name="scopes" value="<%= scopes.join(',') %>">

            <!-- Security Parameters -->
            <% if (authRequest && authRequest.state) { %>
                <input type="hidden" name="state" value="<%= authRequest.state %>">
            <% } %>

            <% if (authRequest && authRequest.nonce) { %>
                <input type="hidden" name="nonce" value="<%= authRequest.nonce %>">
            <% } %>

            <div class="buttons">
                <button type="submit" name="approved" value="false" class="btn btn-deny">Cancel</button>
                <button type="submit" name="approved" value="true" class="btn btn-allow">Allow Access</button>
            </div>
        </form>

        <!-- Debug Information (only shown during development) -->
        <% if (process.env.NODE_ENV !== 'production') { %>
            <div class="debug-info">
                <details>
                    <summary>Debug Information</summary>
                    <div>
                        <p><strong>Client ID:</strong> <%= client.id %></p>
                        <p><strong>Scopes:</strong> <%= scopes.join(', ') %></p>
                        <% if (authRequest) { %>
                            <p><strong>State:</strong> <%= authRequest.state || '(not provided)' %></p>
                            <p><strong>Nonce:</strong> <%= authRequest.nonce || '(not provided)' %></p>
                            <p><strong>Redirect URI:</strong> <%= authRequest.redirect_uri || '(not provided)' %></p>
                        <% } %>
                    </div>
                </details>
            </div>
        <% } %>
    </div>

    <div class="footer">
        Secure OAuth2 authentication powered by Easypanel
    </div>
</div>
</body>
</html>